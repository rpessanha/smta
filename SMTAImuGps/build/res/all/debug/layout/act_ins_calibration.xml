
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg_calibracao">




    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            >




        <ProgressBar android:id="@+id/pbcount"
                     style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent"
                     android:layout_height="wrap_content" android:layout_margin="40dp"
                     android:layout_gravity="top"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:gravity="center_horizontal|bottom"
                android:baselineAligned="true"
                android:layout_weight="5">
        <TextView android:id="@+id/calibrationText" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:text="Calibration Text"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
                      android:textColor="@color/White"
                      android:layout_gravity="top"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:gravity="center_horizontal|bottom"
                android:baselineAligned="true"
                android:layout_weight="2">
        <TextView android:id="@+id/mensagem" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="Mensagens"
                      android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:gravity="center_horizontal|bottom"
                android:baselineAligned="true"
                android:layout_weight="1">
            <ImageButton


                    android:layout_height="70dp"
                    android:id="@+id/btnexit"
                    android:background="@drawable/btnexit"
                    android:layout_width="70dp"
                    android:cropToPadding="false"
                    android:scaleType="center"
                    android:layout_gravity="bottom"
                    android:paddingRight="30dp"
                    />
            <ImageButton
                    android:layout_height="70dp"
                    android:id="@+id/btncontinue"
                    android:background="@drawable/btnstart"
                    android:layout_toRightOf="@+id/imageButton"
                    android:layout_width="93dp"
                    android:cropToPadding="false"
                    android:scaleType="center"
                    android:layout_gravity="center_horizontal|bottom"
                    android:paddingLeft="90dp"
                    />
            <ImageButton
                    android:layout_height="70dp"
                    android:id="@+id/btncalibrate"
                    android:background="@drawable/btnstart"
                    android:layout_toRightOf="@+id/imageButton"
                    android:layout_width="93dp"
                    android:cropToPadding="false"
                    android:scaleType="center"
                    android:layout_gravity="center_horizontal|bottom"
                    android:paddingLeft="90dp"
                    />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
